@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        font-family: "Inter", sans-serif;
        background-color: #f0f2f5;
    }

    .movie-card {
        background-color: #fff;
        border-radius: 0.5rem; /* Equivalent to rounded-lg */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        margin-bottom: 1.5rem; /* mb-6 */
    }

    .movie-card-header {
        background-color: #f8f9fa;
        padding: 1rem;
        border-bottom: 1px solid #e9ecef;
        font-weight: bold;
    }

    .movie-card-body {
        display: flex;
        flex-grow: 1; /* Allows the body to take available space */
        padding: 1rem;
    }

    .movie-poster {
        flex-shrink: 0;
        width: 150px; /* Fixed width for the poster */
        height: auto; /* Maintain aspect ratio */
        border-radius: 0.375rem; /* rounded-md */
        margin-right: 1rem;
        object-fit: cover;
    }

    .movie-details {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .movie-info p {
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .movie-info strong {
        color: #343a40;
    }

    .movie-actions {
        display: flex;
        gap: 0.75rem; /* space-x-3 */
        margin-top: 1rem; /* mt-4 */
    }
</style>
<div class="col-md-6 col-lg-6 col-xl-6">
    <div class="movie-card">
        <div class="movie-card-header">
            Venom: Let There Be Carnage
        </div>
        <div class="movie-card-body">
            <img src="https://placehold.co/150x225/e0e0e0/ffffff?text=Movie+Poster" onerror="this.onerror=null;this.src='https://placehold.co/150x225/e0e0e0/ffffff?text=Placeholder';" alt="Movie Poster" class="movie-poster">
            <div class="movie-details">
                <div class="movie-info">
                    <p><strong>Price:</strong> <span class="badge bg-secondary rounded-pill px-3 py-2 text-base">99.03</span></p>
                    <p><strong>Cinema:</strong> Photospace</p>
                    <p><strong>Start Date:</strong> 3/23/2024 6:00:00 PM</p>
                    <p><strong>End Date:</strong> 4/1/2024 6:00:00 PM</p>
                    <p><strong>Category:</strong> <a href="#" class="text-decoration-none text-blue-600 hover:underline">Cartoon</a></p>
                    <button class="btn btn-primary btn-sm rounded-md shadow-sm px-3 py-2 font-medium">Available</button>
                </div>
                <div class="movie-actions">
                    <button class="btn btn-outline-secondary rounded-md shadow-sm px-4 py-2 font-medium">More Details</button>
                    <button class="btn btn-success rounded-md shadow-sm px-4 py-2 font-medium">Book Ticket</button>
                </div>
            </div>
        </div>
    </div>
</div>

