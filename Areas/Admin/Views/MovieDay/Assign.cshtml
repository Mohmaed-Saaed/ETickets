@model ETickets.ModelView.MovieDaysVM

<div class="container">
<h4>MovieDaysVM</h4>
<hr />
    <div class="row justify-content-center">

        <div class="col-md-4">
            <form asp-action="Assign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" value="@Model.MovieId" asp-for="MovieId" />
                <input type="hidden" value="@Model.MovieDayId" asp-for="MovieDayId" />
                <div class="form-group">
                    <label asp-for="MovieName" class="control-label col-auto"></label>
                    <input asp-for="MovieName" class="form-control" />
                </div>
                <div class="form-group row justify-content-between">
                    <div class="col-6">
                        <label asp-for="MovieStartDate" class="control-label "></label>
                        <input class="form-control" readonly asp-for="MovieStartDate" value="@Model.MovieStartDate" />
                    </div>
                    <div class="col-6">
                        <label asp-for="MovieEndDate " class="control-label "></label>
                        <input class="form-control" readonly asp-for="MovieEndDate" value="@Model.MovieEndDate" />
                    </div>
                </div>
                <div class="form-group ">
                    <label asp-for="Duration" class="control-label"></label>
                    <input class="form-control" readonly asp-for="Duration" value="@Model.Duration" />
                </div>
                <div class="form-group row ">
                        <label asp-for="Date" class="control-label"></label>
                    <div class="col-10">
                        <input type="date" asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="col-2 align-self-center">
                        <img data-bs-toggle="modal" data-bs-target="#exampleModal" id="calender" src="~/images/Icons/calendar.png" alt="Alternate Text" width="24" height="24" style="cursor:pointer" />
                    </div>
                </div>
          
                <div class="form-group">
                    <label asp-for="DayId" class="control-label"></label>
                    <select asp-items="Model.Days" asp-for="DayId" class="form-select">
                        <option>-- Select a day --</option>
                    </select>
                    <span asp-validation-for="DayId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="From" class="control-label"></label>
                    <input type="time" asp-for="From" class="form-control" />
                    <span asp-validation-for="From" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="To" class="control-label"></label>
                    <input type="time" asp-for="To" class="form-control" />
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MinutesRestAfterMovie" class="control-label"></label>
                    <input asp-for="MinutesRestAfterMovie" class="form-control" />
                    <span asp-validation-for="MinutesRestAfterMovie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $("#calender").on("click", function(e) {
            var date = $("#Date").val();
            var movieId = $("#MovieId").val();
            $.ajax({
                url: `/Admin/MovieDay/GetMovieDateTimes?date=${date}&movieId=${movieId}`,
                type: "GET",
                success: function(data) {
                    $("#exampleModal .modal-body").html(data);
                    $("#exampleModal").modal("show");
                },
            });
        });

    </script>


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
