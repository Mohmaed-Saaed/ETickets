@model IEnumerable<Chair>

@{
	ViewData["Title"] = "Chair List";
}

<div class="p-3">

	<div class="d-flex justify-content-between">
		<h1>Chair</h1>
		@if (User.Identity is not null && !User.IsInRole(SD.Employee))
		{
			<p>
				<a asp-action="Save" class="btn btn-primary">Add</a>
			</p>
		}
	</div>

	<div class="table-responsive">
		<table id="ChairTable" class="table table-striped  table-bordered">
			<thead class="thead-dark">
				<tr>
					<th width="10%">
						Id
					</th>
					<th width="70%">
						Cinema
					</th>
					@if (User.Identity is not null && !User.IsInRole(SD.Employee))
					{
						<th width="15%">Actions</th>
					}
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Id
						</td>
						<td >
							@item.Cinema.Name
						</td>
						@if (User.Identity is not null && !User.IsInRole(SD.Employee))
						{
							<td>
								<a asp-area="Admin" asp-controller="Chair" asp-action="ChairStatus" asp-route-id="@item.Id" class="btn btn-sm btn-info">
									@(item.IsWorking == true ? "Disable" : "Active")
								</a> |
								<button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-id="@item.Id" data-name="@item.Id">Delete </button>
							</td>
						}
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<partial name="Delete" />

@section Scripts {
	<script>
		$('#confirmDeleteModal').on('show.bs.modal', function (event) {
			var button = $(event.relatedTarget);

			var ChairId = button.data('id');

			$(this).find('#ChairIdToDelete').val(ChairId);
		});

		$('#confirmDeleteButton').on('click', function () {
			$('#deleteChairForm').submit();
		});
	</script>
}