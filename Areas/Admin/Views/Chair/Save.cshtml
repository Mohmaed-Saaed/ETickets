@model ChairVM

<div class="p-3">
<h1>Add Chair</h1>

<hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Save" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ChiarsNumber" class="form-label"></label>
                    <input asp-for="ChiarsNumber" class="form-control" />
                    <span asp-validation-for="ChiarsNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cinemas" class="control-label"></label>
                    <select asp-for="CinemaId" class="form-select" asp-items="Model.Cinemas">
                        <option value="">-- Select Cinema --</option>
                    </select>
                    <span asp-validation-for="CinemaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsWorking" class="form-check-label"></label>
                    <input asp-for="IsWorking" class="form-check-input" />
                    <span asp-validation-for="IsWorking" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between mt-3">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <a class="btn btn-dark" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
