@model ETickets.ModelView.LoginVM
@inject IStringLocalizer<SharedTitle> localizer

@if(!User.Identity.IsAuthenticated)
{

	<div class="container">

		<h4>Login</h4>
		<hr />
		<div class="row justify-content-center">
			<div class="col-md-4">

				@if (Model.EmailConfirmed)
				{
					<form asp-action="Login">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="UserNameOrEmail" class="control-label">@localizer["UserNameOrEmail"]</label>
							<input asp-for="UserNameOrEmail" class="form-control" />
							<span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Password" class="control-label">@localizer["Password"]</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="row my-2">
							<div class="form-check col-7">
								<div>
									<label asp-for="RememberMe" class="form-check-label">@localizer["RememberMe"]</label>
									<input asp-for="RememberMe" class="form-check-input" />
									<span asp-validation-for="RememberMe" class="text-danger"></span>
								</div>
							</div>
							<div class="col-5">
								<a asp-action="ForgetPassword">@localizer["ForgotPassword"]</a>
							</div>
						</div>


						<div class="form-group mt-3">
							<div class="row justify-content-between">
								<input type="submit" value="Create" class="btn btn-primary col-3" />
								<a class="col-5" asp-action="Register">@localizer["Register"]</a>
							</div>
						</div>

					</form>

				}
				else
				{
					<div class="form-group mt-12">
						<span>Your Email is not confirmed click </span>
						<a id="ConfirmEmail" asp-action="SendToken">Here</a>
						<span> send email confirmation again.</span>
					</div>
					<div class="form-group mt-12">
						<a asp-action="Login">@localizer["Login"]</a>

					</div>
				}
			</div>
		</div>
	</div>
}



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		$('#ConfirmEmail').on('click', function (e) {
		e.preventDefault();
		var UserNameOrEmail = "";
		@if (TempData["UserNameOrEmail"] != null)
		{
			<text>
					UserNameOrEmail = '@TempData["UserNameOrEmail"]';
					$.ajax({
						url: '@Url.Action("SendEmailConfirmationByUserNameOrEmail", "Account")',
						type: 'GET',
						data : {UserNameOrEmail : UserNameOrEmail},
						success: function (response) {

						},
					});
			</text>
		}


		});


	</script>




}
